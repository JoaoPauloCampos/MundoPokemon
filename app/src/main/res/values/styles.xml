<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="recycler_view_item_default">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/margin_mini</item>
        <item name="android:paddingBottom">@dimen/margin_mini</item>
        <item name="android:paddingLeft">@dimen/margin_default</item>
        <item name="android:paddingRight">@dimen/margin_default</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="recycler_view_item_parent" parent="recycler_view_item_default" />

    <style name="Theme.MyDialog" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>
